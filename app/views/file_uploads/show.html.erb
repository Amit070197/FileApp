<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @file_upload.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @file_upload.description %>
</p>

<p>
  <strong>User:</strong>
  <%= @file_upload.user_id %>
</p>

<% if @file_upload.file.attached? %>
  <p>
    <strong>File:</strong>
    <%= link_to 'Download File', rails_blob_path(@file_upload.file, disposition: 'attachment') %>
  </p>
<% end %>

<p>
  <strong>Link to Share URL:</strong>
  <%= @tiny_url %>
</p>

<%= link_to 'Edit', edit_file_upload_path(@file_upload) %> |
<%= link_to 'Back', file_uploads_path %>
